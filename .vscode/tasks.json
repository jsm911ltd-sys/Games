{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Wally: Install",
      "type": "shell",
      "command": "wally install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rojo: Serve",
      "type": "shell",
      "command": "rojo serve default.project.json",
      "isBackground": true,
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rojo: Sourcemap Watch",
      "type": "shell",
      "command": "rojo sourcemap default.project.json --watch -o sourcemap.json",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Rojo: Build Place",
      "type": "shell",
      "command": "rojo build default.project.json -o Games.rbxlx",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Dev: Quiet Vendor Lints",
      "type": "shell",
      "command": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/quiet-vendor.ps1",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Stylua: Format Workspace",
      "type": "shell",
      "command": "stylua .",
      "group": "none",
      "problemMatcher": []
    }
  ]
}
