{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Wally: Install",
      "type": "shell",
      "command": "wally install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rojo: Serve",
      "type": "shell",
      "command": "rojo serve default.project.json",
      "isBackground": true,
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rojo: Sourcemap Watch",
      "type": "shell",
      "command": "rojo sourcemap default.project.json --watch -o sourcemap.json",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Rojo: Build Place",
      "type": "shell",
      "command": "rojo build default.project.json -o Games.rbxlx",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Stylua: Format Workspace",
      "type": "shell",
      "command": "stylua .",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Selene: Lint",
      "type": "shell",
      "command": "selene .",
      "group": "test",
      "problemMatcher": [
        {
          "owner": "selene",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        }
      ]
    }
  ]
}
